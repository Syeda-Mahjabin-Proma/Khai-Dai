<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    android:alpha="0.89">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.75"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="Joining As: "
                android:textStyle="bold"
                android:layout_marginBottom="16sp"
                android:textColor="@color/black"
                android:background="@color/white"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="left">

                <RadioButton
                    android:id="@+id/radioButtonCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer (Food Buyer)"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/radioButtonChef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chef (Food Seller)"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/radioButtonDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Person"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>

            </RadioGroup>

            <Button
                android:id="@+id/signup_option_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                android:text="Next"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>